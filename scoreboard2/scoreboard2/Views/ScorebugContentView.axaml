<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:scoreboard2.ViewModels"
             xmlns:baseball="using:scoreboard2.Views.Baseball.Designs"
             xmlns:football="using:scoreboard2.Views.Football.Designs"
             xmlns:basketball="using:scoreboard2.Views.Basketball.Designs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="scoreboard2.Views.ScorebugContentView"
             x:DataType="vm:MainViewModel">
    
    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>
        
    <Carousel SelectedIndex="{Binding SelectedGame}">
        <baseball:BaseballScorebugViewMain />
        <football:FootballScorebugViewMain />
        <basketball:BasketballScorebugViewMain />
    </Carousel>
    
</UserControl>
