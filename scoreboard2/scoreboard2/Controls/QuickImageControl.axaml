<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:scoreboard2.Controls">
    <Design.PreviewWith>
        <StackPanel>
            <controls:QuickImageControl Title="Bruh" Image="avares://Common/Assets/clist_dir.png" />
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="controls|QuickImageControl">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                    <Grid Margin="5" RowDefinitions="*, Auto">
                        <Grid Grid.Row="0" RowDefinitions="*, Auto">
                            <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0" Content="{TemplateBinding Title}" />
                                <Image Grid.Column="1" Height="50" Width="50" Source="{TemplateBinding Image}" />
                            </Grid>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding ChooseClickFunction, RelativeSource={RelativeSource TemplatedParent}}">Choose</Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
