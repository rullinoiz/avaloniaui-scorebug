<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:scoreboard2.Controls.Scoreboard">
    <Design.PreviewWith>
        <c:DotValueDisplaySmall Max="3" />
    </Design.PreviewWith>
    
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://scoreboard2/Controls/Common/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>
    
    <Style Selector="c|DotValueDisplaySmall /template/ :is(Ellipse)">
        <Setter Property="Width" Value="15" />
        <Setter Property="Height" Value="15" />
    </Style>

    <Style Selector="c|DotValueDisplaySmall">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Name="StackPanel" Orientation="Horizontal" Spacing="5" Margin="3">
                    <!-- this will be populated by code -->
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
