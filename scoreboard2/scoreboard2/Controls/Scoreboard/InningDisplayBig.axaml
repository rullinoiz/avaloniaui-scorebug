<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:scoreboard2.Controls.Scoreboard">
    <Design.PreviewWith>
        <Border Width="100" Height="125">
            <controls:InningDisplayBig />
        </Border>
    </Design.PreviewWith>
    
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Controls/Common/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <Style Selector="controls|InningDisplayBig">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="*, Auto, *" Margin="10">
                    <Image Grid.Row="0" Name="TopArrow" Width="30" />
                    <Label Grid.Row="1" HorizontalAlignment="Center" FontSize="30" 
                           Foreground="{StaticResource OnColorBrush}" 
                           FontFamily="{StaticResource InterFont}" 
                           Content="{Binding Inning.InningNum, 
                           RelativeSource={RelativeSource TemplatedParent}}" />
                    <Image Grid.Row="2" Name="BottomArrow" Width="30" RenderTransform="scaleY(-1)" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
